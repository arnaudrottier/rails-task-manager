<div class="container">
  <div class="row">
    <h1><%= @task.title %></h1>
  <%= link_to edit_task_path(@task) do %>
  <i class="fa fa-pencil" aria-hidden="true"></i>
  <% end %>
  </div>
    <p><%= @task.details %></p>
    <p><%= @task.completed ? "completed" : "not done" %></p>
    <%= link_to task_path(@task), method: :delete, data: { confirm: "Are you sure you want to delete #{@task.title}?" } do %>
    <i class="fa fa-bath display-4" aria-hidden="true"></i>
  <% end %>
  <%= link_to "Back", tasks_path %>
</div>
